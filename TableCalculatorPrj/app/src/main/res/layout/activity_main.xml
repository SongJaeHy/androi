<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow>
        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:hint="1번숫자"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:hint="2번숫자"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:text="0"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"/>
        <Button
            android:id="@+id/btn7"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnp"
            android:layout_span="5"
            android:text="+" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnm"
            android:layout_span="5"
            android:text="-" />


    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnu"
            android:layout_span="5"
            android:text="*" />


    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnd"
            android:layout_span="5"
            android:text="/" />


    </TableRow>
    <TableRow>
        <TextView

        android:text="결과 :" />
        <TextView
            android:id="@+id/tv2"
            android:hint="결과위치"/>
    </TableRow>


</TableLayout>